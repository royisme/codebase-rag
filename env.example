# Application Settings
APP_NAME="Code Graph Knowledge Service"
DEBUG=false
HOST=0.0.0.0
PORT=8123

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# LLM Provider Configuration
# Options: ollama, openai, gemini
LLM_PROVIDER=ollama

# Ollama Configuration (if using ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# OpenAI Configuration (if using openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1

# Google Gemini Configuration (if using gemini)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-pro

# Embedding Provider Configuration
# Options: ollama, openai, gemini, huggingface
EMBEDDING_PROVIDER=ollama

# Ollama Embedding (if using ollama)
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# OpenAI Embedding (if using openai)
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Gemini Embedding (if using gemini)
GEMINI_EMBEDDING_MODEL=models/embedding-001

# HuggingFace Embedding (if using huggingface)
HF_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Model Parameters
TEMPERATURE=0.1
MAX_TOKENS=2048

# RAG Settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K=5

# Timeout Settings (in seconds)
CONNECTION_TIMEOUT=30
OPERATION_TIMEOUT=120
LARGE_DOCUMENT_TIMEOUT=300

# Vector Search Settings
VECTOR_DIMENSION=384 